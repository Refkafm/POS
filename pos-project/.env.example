# Database Configuration
# IMPORTANT: Change these for production with proper authentication
MONGODB_URI=mongodb://localhost:27017/pos_system
MONGODB_TEST_URI=mongodb://localhost:27017/pos_system_test

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
# CRITICAL: Generate secure random strings for production!
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Session Configuration
# CRITICAL: Generate secure random string for production!
SESSION_SECRET=your-super-secure-session-secret-key-here-change-in-production
SESSION_MAX_AGE=86400000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./public/uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@yourpos.com

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Development Configuration
DEBUG=pos:*
VERBOSE_LOGGING=false

# Test Configuration
TEST_ADMIN_USERNAME=admin
TEST_ADMIN_PASSWORD=admin123

# Default User Passwords (Change in Production)
# CRITICAL: Change these immediately after deployment!
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_CASHIER_PASSWORD=cashier123